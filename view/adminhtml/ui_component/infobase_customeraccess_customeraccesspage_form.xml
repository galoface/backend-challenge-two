<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">infobase_customeraccess_customeraccesspage_form.customeraccesspage_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Infobase\CustomerAccess\Block\Adminhtml\CustomerAccessPage\Edit\BackButton"/>
			<button name="delete" class="Infobase\CustomerAccess\Block\Adminhtml\CustomerAccessPage\Edit\DeleteButton"/>
			<button name="save" class="Infobase\CustomerAccess\Block\Adminhtml\CustomerAccessPage\Edit\SaveButton"/>
			<button name="save_and_continue" class="Infobase\CustomerAccess\Block\Adminhtml\CustomerAccessPage\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>infobase_customeraccess_customeraccesspage_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>infobase_customeraccess_customeraccesspage_form.customeraccesspage_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="customeraccesspage_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="customeraccesspage_form_data_source" class="Infobase\CustomerAccess\Model\CustomerAccessPage\DataProvider">
			<settings>
				<requestFieldName>customeraccesspage_id</requestFieldName>
				<primaryFieldName>customeraccesspage_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
        <field name="page_route" formElement="select" sortOrder="100">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Select Page</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Infobase\CustomerAccess\Model\OptionsProvider\PageOptionsProvider"/>
                    </settings>
                </select>
            </formElements>
		</field>
	</fieldset>
</form>
